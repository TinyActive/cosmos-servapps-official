{
    "cosmos-installer": {
        "form": [{
                "name": "PRESTASHOP_HOST",
                "label": "What prestashop do you want to use?",
                "initialValue": "prestashop.com",
                "type": "text"
            },
            {
                "name": "PRESTASHOP_PASSWORD",
                "label": "What prestashop admin password do you want?",
                "initialValue": "prestashop.com",
                "type": "password"
            },
            {
                "name": "PRESTASHOP_EMAIL",
                "label": "What prestashop admin email do you want?",
                "initialValue": "prestashop.com",
                "type": "text"
            }
        ]
    },
    "version": "2",
    "services": {
        "{ServiceName}": {
            "image": "docker.io/bitnami/prestashop:8",
            "container_name": "{ServiceName}",
            "hostname": "{ServiceName}",
            "routes": [{
                "name": "{ServiceName}",
                "description": "Expose {ServiceName} to the web",
                "useHost": true,
                "target": "http://{ServiceName}:8080",
                "mode": "SERVAPP",
                "Timeout": 14400000,
                "ThrottlePerMinute": 12000,
                "BlockCommonBots": true,
                "SmartShield": {
                    "Enabled": true
                }
            }],
            "environment": [
                "PRESTASHOP_HOST={Context.PRESTASHOP_HOST}",
                "PRESTASHOP_PASSWORD={Context.PRESTASHOP_PASSWORD}",
                "PRESTASHOP_EMAIL={Context.PRESTASHOP_EMAIL}",
                "PRESTASHOP_DATABASE_HOST={ServiceName}-mariadb",
                "PRESTASHOP_DATABASE_PORT_NUMBER=3306",
                "PRESTASHOP_DATABASE_USER=bn_prestashop",
                "PRESTASHOP_DATABASE_PASSWORD={Passwords.1}",
                "PRESTASHOP_DATABASE_NAME=bitnami_prestashop"
            ],
            "volumes": [{
                "source": "prestashop_data",
                "target": "/bitnami/prestashop",
                "type": "volume"
            }],
            "networks": {
                "{ServiceName}": {}
            }
        },
        "{ServiceName}-mariadb": {
            "image": "docker.io/bitnami/mariadb:11.1",
            "container_name": "{ServiceName}-mariadb",
            "hostname": "{ServiceName}-mariadb",
            "environment": [
                "MARIADB_PASSWORD={Passwords.1}",
                "MARIADB_ROOT_PASSWORD={Passwords.2}",
                "MARIADB_USER=bn_prestashop",
                "MARIADB_DATABASE=bitnami_prestashop"
            ],
            "volumes": [{
                "source": "mariadb_data",
                "target": "/bitnami/mariadb",
                "type": "volume"
            }],
            "networks": {
                "{ServiceName}": {}
            }
        }
    },
    "networks": {
        "{ServiceName}": {}
    }
}